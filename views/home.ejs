<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./partials/head') %>
    <!-- <title>HomePage</title> -->
    <title>Home</title>
  </head>
  <body>
    <%-include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row row-cols-3">
        <% blogs.forEach(blog => { %>
        <div class="cols">
          <div class="card col" style="width: 18rem; height: 350px; margin-bottom: 20px;">
            <img src="<%= blog.coverImageURL %> " class="card-img-top" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-success">View</a>
            </div>
          </div>
        </div>
      
          <% }) %>
        
        </div>
    </div>
    <%-include('./partials/scripts') %>
  </body>
</html>
