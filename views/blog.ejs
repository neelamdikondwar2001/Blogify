<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./partials/head') %>
    <!-- <title>HomePage</title> -->
    <title>Blog</title>
  </head>
  <body>
    <%-include('./partials/nav') %>
    <div class="container mt-4">
      <h3><%= blog.title %></h3>
      <img src="<%= blog.coverImageURL %>" width="300px" />
      <p><%= blog.body %></p>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="100px"> <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
        <% if (locals.user) { %>
        <h2>Comments(<%= comments.length %>)</h2>
     
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
              
              <input
                type="text"
                name="content"
                class="form-control"
                placeholder="Enter Your Comment"
              />
              
            </div>
            <button class="btn btn-sm btn-primary"   type="submit">Add</button>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                 <div>
                    <img src="<%= comment.createdBy.profileImageURL %>"
                     width="100px"> <%= comment.createdBy.fullName %><pre><%= comment.content %></pre>

                 </div>
                <% }) %>
            </div>
     <% } %>
    </div>
    <%-include('./partials/scripts') %>
  </body>
</html>
